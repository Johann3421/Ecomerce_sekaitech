# ──────────────────────────────────────────────────────────
#  LumiStore — Environment Variables
#  Copy to .env and fill in the values
# ──────────────────────────────────────────────────────────

# ── PostgreSQL ──────────────────────────────────────────
# Used by docker-compose to create the database service
POSTGRES_DB=lumistore
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_strong_password

# Full connection string (auto-built in Docker Compose from vars above)
# For local dev, paste your direct PostgreSQL URL here:
DATABASE_URL=postgresql://postgres:changeme_strong_password@localhost:5432/lumistore

# ── NextAuth / Auth.js ──────────────────────────────────
NEXTAUTH_URL=https://yourdomain.com
# Generate: openssl rand -base64 32
NEXTAUTH_SECRET=replace_with_32_char_random_secret
AUTH_SECRET=replace_with_32_char_random_secret

# ── Public ──────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_APP_NAME=LumiStore

# ── OAuth (optional) ────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ── Dokploy / Docker ────────────────────────────────────
APP_PORT=3000
DOMAIN=yourdomain.com
